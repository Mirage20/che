<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .alignLeft {
            float: left;
        }

        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="780px" height="440px" addStyleNames="{style.emptyBorder}"
                       debugId="test-runner-mainForm">

        <g:north size="90.0">
            <g:VerticalPanel>
                <g:Label width="300px" ui:field="testFramework" addStyleNames="{style.alignLeft}"
                            debugId="test-runner-framework"/>

                <g:Label width="300px" ui:field="success" addStyleNames="{style.alignLeft}"
                            debugId="test-runner-success"/>

                <g:Label width="300px" ui:field="failureCount" addStyleNames="{style.alignLeft}"
                            debugId="test-runner-failure-count"/>
            </g:VerticalPanel>
        </g:north>


        <g:west size="380.0">
            <g:FlowPanel>
                <g:ListBox visibleItemCount="24" width="380px" ui:field="listBox" addStyleNames="{style.alignLeft}"
                           debugId="test-runner-fail-list"/>
            </g:FlowPanel>
        </g:west>

        <g:east size="380.0">
            <g:FlowPanel>
                <g:TextArea width="360px" ui:field="reference" addStyleNames="{style.alignLeft}"
                            debugId="test-runner-reference" visibleLines="21"/>
            </g:FlowPanel>
        </g:east>
    </g:DockLayoutPanel>
</ui:UiBinder>
